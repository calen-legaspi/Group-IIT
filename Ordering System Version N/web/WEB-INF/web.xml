<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>GetUnpaidCustomers</servlet-name>
        <servlet-class>com.onb.orderingsystem.servlet.GetUnpaidCustomers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>unpaidCustomersList</servlet-name>
        <jsp-file>/WEB-INF/CustomersWithUnpaidOrders.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>GetUnpaidOrdersByCustomer</servlet-name>
        <servlet-class>com.onb.orderingsystem.servlet.GetUnpaidOrdersByCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnpaidOrdersList</servlet-name>
        <jsp-file>/WEB-INF/UnpaidOrdersByCustomer.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>PayOrder</servlet-name>
        <servlet-class>com.onb.orderingsystem.servlet.ProcessUnpaidOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllCustomers</servlet-name>
        <servlet-class>com.onb.orderingsystem.servlet.GetAllCustomers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllCustomersList</servlet-name>
        <jsp-file>/WEB-INF/AllCustomersList.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetUnpaidCustomers</servlet-name>
        <url-pattern>/UnpaidCustomers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>unpaidCustomersList</servlet-name>
        <url-pattern>/CustomersWithUnpaidOrders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUnpaidOrdersByCustomer</servlet-name>
        <url-pattern>/UnpaidOrders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnpaidOrdersList</servlet-name>
        <url-pattern>/UnpaidOrdersList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PayOrder</servlet-name>
        <url-pattern>/PayOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllCustomers</servlet-name>
        <url-pattern>/Customers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllCustomersList</servlet-name>
        <url-pattern>/AllCustomersList</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
